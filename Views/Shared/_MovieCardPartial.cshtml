@model Cinema
<div class="card">   
    
    
    <div class="img-container">
        <div class="img-blur" style="background-image:url(@Model.Poster)"></div>
        <img src="@Model.Poster" onerror="event.target.src='/images/No_Image.png'" class="card-img-top" alt="...">
        
    </div>
    
    <div class="card-body">
        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
        <p class="card-text">Type: @Model.Type
            <img movie="@Model"></img>
        </p>
        @if (Model.Plot==null)
        {
            <movie-details movie="@Model"></movie-details>
        }
       
    </div>
</div>